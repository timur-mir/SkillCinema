<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >


    <TextView
        android:id="@+id/epizode_number_and_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="4dp"
        android:text="1 серия.Введение"
        android:textColor="@color/frame_color"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/epizode_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/frame_color"
        android:layout_gravity="left"
        android:layout_marginTop="4dp"
        android:text="18 апреля 2023"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/epizode_number_and_name" />


</androidx.constraintlayout.widget.ConstraintLayout>