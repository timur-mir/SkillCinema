<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/ratingLabelCF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:textSize="8sp"
        android:background="#6176E6"
        android:textColor="@color/white"
        android:text="7.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleCF"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Title"
        android:textSize="12sp"
        android:textColor="#023377"
        app:layout_constraintStart_toStartOf="@+id/posterCF"
        app:layout_constraintTop_toBottomOf="@+id/posterCF"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/genresCF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Genres"
        android:textSize="10sp"
        android:textColor="#023377"
        app:layout_constraintStart_toStartOf="@+id/titleCF"
        app:layout_constraintTop_toBottomOf="@+id/titleCF" />


    <ImageView
        android:id="@+id/posterCF"
        android:layout_width="130dp"
        android:layout_height="156dp"
        android:layout_marginTop="1dp"
        android:contentDescription="TODO"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/gradient2" />
</androidx.constraintlayout.widget.ConstraintLayout>