<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="130dp"
    android:layout_height="220dp"
    android:background="@drawable/gradient4">


    <TextView
        android:id="@+id/ratingLabelBestFilm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:textSize="8sp"
        android:background="#6176E6"
        android:textColor="@color/white"
        android:text="7.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleBestFilm"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:paddingLeft="4dp"
        android:text="@string/title"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/posterPicBestFilm"
        app:layout_constraintTop_toBottomOf="@+id/posterPicBestFilm"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/genresBestFilm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:paddingLeft="4dp"
        android:text="Genres"
        android:textSize="10sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/titleBestFilm"
        app:layout_constraintTop_toBottomOf="@+id/titleBestFilm" />


    <ImageView
        android:id="@+id/posterPicBestFilm"
        android:layout_width="130dp"
        android:layout_height="156dp"
        android:layout_marginTop="1dp"
        android:contentDescription="TODO"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/gradient2" />


</androidx.constraintlayout.widget.ConstraintLayout>