<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="152dp"
        android:layout_height="152dp"
        android:layout_gravity="center"
        app:cardCornerRadius="12dp"
        app:strokeColor="#770C30"
        app:strokeWidth="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient4"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/delete_collection"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"

                />

            <ImageView
                android:id="@+id/icon_view_col"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="46dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/heart" />

            <TextView
                android:id="@+id/text_view_col"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_view_col"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:text="Любимые" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_view_collection"
                android:layout_width="34dp"
                android:layout_height="20dp"
                android:layout_below="@id/text_view_col"
                android:layout_centerHorizontal="true"
                android:background="#2D6FDF"
                android:text="20"
                android:textColor="#fff" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>

